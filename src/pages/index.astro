---
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import Layout from "../layouts/Layout.astro";
import Briefcase from "../components/icons/briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Project.astro";
import AboutMe from "../components/AboutMe.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Contacto from "../components/Contacto.astro";
import ContactoIcon from "../components/icons/ContactoIcon.astro";
import JavaScript from "../components/icons/JavaScript.astro";
import TypeScript from "../components/icons/TypeScript.astro";
import React from "../components/icons/React.astro";
import Java from "../components/icons/Java.astro";
import Mysql from "../components/icons/Mysql.astro";
import Tailwind from "../components/icons/Tailwind.astro";
import SpringBootIcon from "../components/icons/SpringBootIcon.astro";

---

<Layout
	title="Portfolio Agustin Del Monte desarrollador Full Stack"
	description="Bienvenido/a al portfolio de Agustín, programador Full Stack con experiencia en desarrollo web, bases de datos y diseño de interfaces. Descubrí mis proyectos, formación y datos de contacto."
>
	<main class="px-5">
		<SectionContainer class="pt-10 sm:pt-32 md:pt-40 pb-36 sm:pb-40 md:pb-30">
			
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row flex-wrap gap-x-4 pb-6 lg:pb-10 opacity-0 animate-slide-down"
			>
				Hey, soy <span class="text-gradient animate-gradient inline-block pb-1">Agustín</span> <a
					href="https://www.linkedin.com/in/agustín-del-monte-741776244/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge> Disponible </Badge>
				</a>
			</h1>

			<h2 class="text-xl md:text-2xl leading-relaxed opacity-0 animate-slide-up">
				Programador Full Stack <br />

				<span class="text-lg opacity-90"
					>Apasionado por el aprendizaje continuo, la exploración de
					nuevas perspectivas y el desarrollo de soluciones web
					combinando lógica, diseño y creatividad.</span
				>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap opacity-0 animate-fade-in-up">
				<SocialPill
					href="https://www.linkedin.com/in/agustín-del-monte-741776244/"
				>
					<LinkedInIcon class="size-4 md:w-6 h-6" />
					LinkedIn
				</SocialPill>

				<SocialPill href="https://github.com/AgusDM7">
					<GitHubIcon class="size-4 md:w-6 h-6" />
					Github
				</SocialPill>

				<SocialPill href="mailto: delmonteagustin1@gmail.com">
					<EmailIcon class="size-4 md:w-6 h-6" />
					delmonteagustin1@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="sobre-mi" class="mb-40">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ProfileCheck class="zise-6" />
				Sobre mí
			</h2>
			<AboutMe />

				<div class="mt-16">
				<h3 class="text-2xl font-semibold text-pretty mb-4 text-white ml-2">Mis Habilidades</h3>
				<div class="grid grid-cols-4 md:flex gap-2 text-sm mt-6">
					<SocialPill>
						<React class="hidden md:inline size-4 md:w-6 h-6 grayscale brightness-200" />
						React
					</SocialPill>
					
					<SocialPill>
						<JavaScript class="hidden md:inline size-4 md:w-6 h-6" />
						JavaScript
					</SocialPill>
					
					<SocialPill>
						<TypeScript class="hidden md:inline size-3 md:w-4 h-4" />
						TypeScript
					</SocialPill>
					
					<SocialPill>
						<Tailwind class="hidden md:inline size-3 md:w-4 h-4 grayscale brightness-200" />
						Tailwind
					</SocialPill>
					
					<SocialPill>
						<Java class="hidden md:inline size-4 md:w-6 h-6" />
						Java  
					</SocialPill>
					
					<SocialPill>
						<SpringBootIcon class=" hidden md:inline size-3 md:w-4 h-4" />
						SpringBoot
					</SocialPill>
					
					<SocialPill>
						<Mysql class="hidden md:inline size-4 md:w-6 h-6" />
						MySQL
					</SocialPill>
				</div>
			</div>
			
		</SectionContainer>


		<SectionContainer id="proyectos" class="mb-40">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="zise-6" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>



		<SectionContainer id="experiencia" class="mb-40">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="zise-6" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		
		<SectionContainer id="contacto">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ContactoIcon class="zise-6" />
				Contacto
			</h2>
			<Contacto />


	</main>

	<style>
	/* Animaciones de entrada */
	@keyframes slide-down {
		0% {
			opacity: 0;
			transform: translateY(-30px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slide-up {
		0% {
			opacity: 0;
			transform: translateY(30px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fade-in-up {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes gradient-shift {
		0%, 100% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
	}

	/* Clases de animación */
	.animate-slide-down {
		animation: slide-down 0.8s ease-out forwards;
	}

	.animate-slide-up {
		animation: slide-up 0.8s ease-out 0.3s forwards;
	}

	.animate-fade-in-up {
		animation: fade-in-up 0.8s ease-out 0.5s forwards;
	}

	/* Gradiente animado en el nombre */
	.text-gradient {
		background: linear-gradient(
			90deg,
			#86a9e2 0%,
			#9bc0ee 25%,
			#45c5e6 50%,
			#5386c5 75%,
			#09419b 100%
		);
		background-size: 200% auto;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1.2;
		padding-bottom: 0.1em;
		display: inline-block;
	}

	.animate-gradient {
		animation: gradient-shift 3s ease infinite;
	}

	/* Suavizar transiciones en mobile */
	@media (prefers-reduced-motion: reduce) {
		.animate-slide-down,
		.animate-slide-up,
		.animate-fade-in-up,
		.animate-gradient {
			animation: none;
			opacity: 1;
			transform: none;
		}
	}
</style>