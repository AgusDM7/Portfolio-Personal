---
const { href } = Astro.props;
---

<a
    target="_blank"
    href={href}
    role="link"
    class="inline-flex items-center gap-2 px-3 py-2 text-base text-white bg-gray-800 border border-gray-700 rounded-xl transition-colors hover:bg-gray-900 hover:border-gray-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"

>
    <slot />
</a>
