---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div class="relative pl-8 pb-8 group">
  
  <div
    class="absolute w-4 h-4 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full -left-2 top-1 border-4 border-gray-900 transition-all duration-300 group-hover:scale-125 group-hover:shadow-lg group-hover:shadow-blue-500/50"
  >
  </div>

  
  <div class="transition-all duration-300 group-hover:translate-x-1">
    
    <time
      class="inline-flex items-center gap-2 px-3 py-1 mb-3 text-xs font-medium bg-blue-500/10 text-blue-400 rounded-full border border-blue-500/20"
    >
      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
      </svg>
      {date}
    </time>

    
    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-400 group-hover:to-purple-400 transition-all duration-300">
      {title}
    </h3>

    
    <p class="text-base text-gray-400 leading-relaxed mb-3">
      {description}
    </p>
    
  </div>
</div>
